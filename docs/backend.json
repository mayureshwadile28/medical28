{
    "entities": {
        "Medicine": {
            "title": "Medicine",
            "description": "Represents a medicine in the inventory.",
            "type": "object",
            "properties": {
                "name": { "type": "string", "description": "The name of the medicine." },
                "category": { "type": "string", "description": "The category of the medicine (e.g., Tablet, Syrup)." },
                "location": { "type": "string", "description": "The storage location of the medicine." },
                "expiry": { "type": "string", "format": "date-time", "description": "The expiry date of the medicine." },
                "price": { "type": "number", "description": "The price of the medicine." },
                "tabletsPerStrip": { "type": "number", "description": "For tablets, the number of tablets per strip." },
                "stock": { 
                    "type": "object",
                    "properties": {
                        "tablets": { "type": "number" },
                        "quantity": { "type": "number" }
                    }
                },
                "description": {
                    "type": "object",
                    "properties": {
                        "patientType": { "type": "string", "enum": ["Human", "Animal"] },
                        "minAge": { "type": "number" },
                        "maxAge": { "type": "number" },
                        "gender": { "type": "string", "enum": ["Male", "Female", "Both"] },
                        "illness": { "type": "string" }
                    }
                }
            },
            "required": ["name", "category", "location", "expiry", "price", "stock"]
        },
        "SaleRecord": {
            "title": "Sale Record",
            "description": "Represents a single sale transaction.",
            "type": "object",
            "properties": {
                "customerName": { "type": "string" },
                "doctorName": { "type": "string" },
                "saleDate": { "type": "string", "format": "date-time" },
                "totalAmount": { "type": "number" },
                "paymentMode": { "type": "string", "enum": ["Cash", "Online", "Card", "Pending"] },
                "paymentSettledDate": { "type": "string", "format": "date-time" },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "medicineId": { "type": "string" },
                            "name": { "type": "string" },
                            "category": { "type": "string" },
                            "quantity": { "type": "number" },
                            "pricePerUnit": { "type": "number" },
                            "total": { "type": "number" }
                        },
                        "required": ["medicineId", "name", "quantity", "pricePerUnit", "total"]
                    }
                }
            },
            "required": ["customerName", "saleDate", "totalAmount", "paymentMode", "items"]
        },
        "SupplierOrder": {
            "title": "Supplier Order",
            "description": "Represents an order placed with a supplier.",
            "type": "object",
            "properties": {
                "supplierName": { "type": "string" },
                "orderDate": { "type": "string", "format": "date-time" },
                "status": { "type": "string", "enum": ["Pending", "Completed", "Cancelled"] },
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "category": { "type": "string" },
                            "quantity": { "type": "string" },
                            "unitsPerPack": { "type": "number" },
                            "unitName": { "type": "string" }
                        },
                        "required": ["name", "category", "quantity"]
                    }
                }
            },
            "required": ["supplierName", "orderDate", "status", "items"]
        }
    },
    "auth": {
        "providers": []
    },
    "firestore": {
        "/medicines/{medicineId}": {
            "schema": { "$ref": "#/backend/entities/Medicine" },
            "description": "Stores individual medicine documents."
        },
        "/sales/{saleId}": {
            "schema": { "$ref": "#/backend/entities/SaleRecord" },
            "description": "Stores individual sale record documents."
        },
        "/supplierOrders/{orderId}": {
            "schema": { "$ref": "#/backend/entities/SupplierOrder" },
            "description": "Stores individual supplier order documents."
        }
    }
}
