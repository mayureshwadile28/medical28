{
  "entities": {
    "Medicine": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Medicine",
      "type": "object",
      "description": "Represents a medicine in the inventory.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Medicine entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the medicine."
        },
        "company": {
            "type": "string",
            "description": "Manufacturing company of the medicine."
        },
        "category": {
          "type": "string",
          "description": "Category of the medicine (e.g., Tablet, Syrup)."
        },
        "location": {
          "type": "string",
          "description": "Storage location of the medicine."
        },
        "description": {
          "type": "object",
          "properties": {
              "patientType": { "type": "string", "enum": ["Human", "Animal"] },
              "minAge": { "type": "number" },
              "maxAge": { "type": "number" },
              "gender": { "type": "string", "enum": ["Male", "Female", "Both"] },
              "illness": { "type": "string" }
          }
        },
        "batches": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "batchNumber": { "type": "string" },
              "stock": { 
                  "type": "object",
                  "properties": {
                      "tablets": { "type": "number" },
                      "quantity": { "type": "number" }
                  }
               },
              "mfg": { "type": "string", "format": "date-time" },
              "expiry": { "type": "string", "format": "date-time" },
              "price": { "type": "number" },
              "purchasePrice": { "type": "number" }
            },
            "required": ["id", "batchNumber", "stock", "expiry", "price"]
          }
        },
        "tabletsPerStrip": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "category",
        "location",
        "batches"
      ]
    },
    "SaleRecord": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SaleRecord",
      "type": "object",
      "description": "Represents a record of a sale.",
      "properties": {
        "id": { "type": "string" },
        "customerName": { "type": "string" },
        "doctorName": { "type": "string" },
        "saleDate": { "type": "string", "format": "date-time" },
        "items": {
          "type": "array",
          "items": {
              "type": "object",
              "properties": {
                  "medicineId": { "type": "string" },
                  "name": { "type": "string" },
                  "company": { "type": "string" },
                  "category": { "type": "string" },
                  "batchNumber": { "type": "string" },
                  "mfgDate": { "type": "string", "format": "date-time" },
                  "expiryDate": { "type": "string", "format": "date-time" },
                  "quantity": { "type": "number" },
                  "pricePerUnit": { "type": "number" },
                  "purchasePricePerUnit": { "type": "number" },
                  "total": { "type": "number" }
              }
          }
        },
        "totalAmount": { "type": "number" },
        "discountPercentage": { "type": "number" },
        "paymentMode": { "type": "string" },
        "paymentSettledDate": { "type": "string", "format": "date-time" }
      },
      "required": [
        "id",
        "customerName",
        "saleDate",
        "totalAmount",
        "items"
      ]
    },
    "WholesalerOrder": {
        "title": "WholesalerOrder",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "wholesalerName": { "type": "string" },
            "orderDate": { "type": "string", "format": "date-time" },
            "items": { 
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string" },
                        "name": { "type": "string" },
                        "category": { "type": "string" },
                        "quantity": { "type": "string" },
                        "batchNumber": { "type": "string" },
                        "unitsPerPack": { "type": "number" },
                        "unitName": { "type": "string" },
                        "status": { "type": "string", "enum": ["Pending", "Received"] }
                    }
                }
            },
            "status": { "type": "string", "enum": ["Pending", "Partially Received", "Completed", "Cancelled"]},
            "receivedDate": { "type": "string", "format": "date-time" }
        }
    },
    "Wholesaler": {
        "title": "Wholesaler",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "contact": { "type": "string" },
            "gstin": { "type": "string" }
        }
    },
    "AppSettings": {
        "title": "AppSettings",
        "type": "object",
        "properties": {
            "pinSettings": {
                "type": "object",
                "properties": {
                    "adminPin": { "type": "string" },
                    "staffPin": { "type": "string" }
                }
            },
            "licenseKey": { "type": "string" },
            "licenseInfo": {
                "type": "object",
                "properties": {
                    "line1": { "type": "string" },
                    "line2": { "type": "string" }
                }
            },
            "doctorNames": {
                "type": "array",
                "items": { "type": "string" }
            }
        }
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/medicines/{medicineId}",
        "definition": { "schema": { "$ref": "#/entities/Medicine" } }
      },
      {
        "path": "/sales/{saleId}",
        "definition": { "schema": { "$ref": "#/entities/SaleRecord" } }
      },
      {
        "path": "/wholesalerOrders/{orderId}",
        "definition": { "schema": { "$ref": "#/entities/WholesalerOrder" } }
      },
      {
        "path": "/wholesalers/{wholesalerId}",
        "definition": { "schema": { "$ref": "#/entities/Wholesaler" } }
      },
      {
        "path": "/settings/app",
        "definition": { "schema": { "$ref": "#/entities/AppSettings" } }
      }
    ]
  }
}
